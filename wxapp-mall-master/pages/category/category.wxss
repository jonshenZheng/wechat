}
.cate-title{
    position: relative;
    height: 30rpx;
    line-height: 30rpx;
    padding:30rpx 0 55rpx;
    text-align: center;
    color: #AB956D;
    font-size: 28rpx;
}
.cate-title::before{
    position: absolute;
    left: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #AB956D;
}
.cate-title::after{
    position: absolute;
    right: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #AB956D;
}

.product-list{
    display: inline-block;
    width: 160rpx;
    height: 160rpx;
    text-align: center;
    margin:0 20rpx 20rpx 0;
    font-size: 24rpx;
}
.product-list image{
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 20rpx;
}
.product-list:nth-child(3n){
    margin-right: 0;
}

.categroy-right .TwoLevelwp{
    position: relative;
    z-index: 2;
    padding:10rpx;
    background-color:#fff; 
}

.categroy-right .TwoLevel{

    box-sizing: border-box;
    position: relative;
    z-index: 2;
    background-color: #fff;
    max-height: 220rpx;
}
.categroy-right .TwoLevelOpt{
    display: inline-block;
    padding: 4rpx 8rpx;
    border-radius: 6rpx;
    background-color: #f0f2f5;
    color:#999;
    margin:10rpx 16rpx;
    font-size:28rpx;

}

.categroy-right .TwoLevelOpt.on{
    background-color: #199ed8;
    color:#fff;
}

.categroy-right .sel-tab{
    display: -webkit-flex;
    display: flex;
    height:74rpx;
    justify-content : center ;
    border-top:2rpx solid #ccc;
    border-bottom:2rpx solid #ccc;
    position: relative;
    z-index: 2;
    background-color: #fff;
}
.categroy-right .tab-lb{
    flex-grow : 1;
    text-align: center;
    font-size: 26rpx;
    color: #333;
    align-self:center;
    height:76rpx;
    line-height:76rpx;

}
.categroy-right .tab-lb:nth-of-type(n+1){
    border-right: 2rpx solid #ccc;
}

.categroy-right .tab-lb icon{
    width: 30rpx;
    height: 16rpx;
    background: url(https://baize-webresource.oss-cn-shenzhen.aliyuncs.com/weixin/image/tri_down.png) no-repeat;
    background-size: 100% 100%;
    margin-left: 6rpx;
}
.categroy-right .selectArea{
    position: relative;
}
.categroy-right .tab-pan{
    position: absolute;
    left: 0;
    top: 100%;
    width: 100%;
    background-color: #f2f2f2;
    -webkit-box-shadow: 0px 5px 5px rgba(0, 0, 0, 0.349019607843137);
    box-shadow: 0px 5px 5px rgba(0, 0, 0, 0.349019607843137);
    transform:translateY(-110%);
	-webkit-transform: translateY(-110%);
    visibility: hidden;
    z-index: 1;
}
.categroy-right .pan_act0.show0,.categroy-right .pan_act1.show1,.categroy-right .pan_act2.show2,.categroy-right .pan_act3.show3,.categroy-right .pan_act4.show4,.categroy-right .pan_act5.show5,.categroy-right .pan_act6.show6,.categroy-right .pan_act7.show7,.categroy-right .pan_act8.show8,.categroy-right .pan_act9.show9,.categroy-right .pan_act10.show10,.categroy-right .pan_act11.show11,.categroy-right .pan_act12.show12,.categroy-right .pan_act13.show13,.categroy-right .pan_act14.show14,.categroy-right .pan_act15.show15,.categroy-right .pan_act16.show16,.categroy-right .pan_act17.show17,.categroy-right .pan_act18.show18,.categroy-right .pan_act19.show19{
    animation: showPan 1s;
    -webkit-animation: showPan 1s forwards;
}

@keyframes showPan{
    from{
        visibility: visible;
        transform:translateY(-110%);
	    -webkit-transform: translateY(-110%);
    }
    to{
        visibility: visible;
        transform:translateY(0);
	    -webkit-transform: translateY(0);
    }
}

.categroy-right .tab-pan .unit{
    position: absolute;
    top: 50%;
    left: 52rpx;
    margin-top : -20rpx;
}

.categroy-right .inp-line:first-child{
    border-bottom: 2rpx solid #ccc
}
.categroy-right .inp-line{
    padding: 20rpx 10rpx;
    text-align: center;
    position: relative;
}
.categroy-right .inp-line input,.categroy-right .inp-line text{
    display: inline-block;
    vertical-align: middle;
}

.categroy-right .inp-line input{
    width: 128rpx;
    height: 64rpx;
    border: 2rpx solid #ccc;
    background-color: #fff;
    font-size:30rpx;
}

.categroy-right .inp-line .sp{
    margin:0 30rpx;
}

.categroy-right .btnBox .sel-btn{
    width: 128rpx;
    height: 64rpx;
    line-height: 64rpx;
    background-color: #ccc;
    color: #999;
    border-radius: 6rpx;
    margin: 0 40rpx;
    display: inline-block;
    border: 0;
    vertical-align: middle;
    font-size: 32rpx;
}

.categroy-right .btnBox .sel-btn::after{
    display: none;
}

.categroy-right .btnBox .sel-btn.gray{
    background-color: #199ed8;
    color: #fff;
}

.showALLSelOpt{
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 9;
    visibility: hidden;
}


.showALLSelOpt.show{
    visibility: visible;
}

.showALLSelOpt .bg{
    position: absolute;
    left: 0;
    top:0;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0.5;
}


.showALLSelOpt .cont{
    position: absolute;
    height: 100%;
    width: 100%;
}

.showALLSelOpt.show .cont{
    animation: showAllOpt 1s;
    -webkit-animation: showAllOpt 1s forwards;
}

@keyframes showAllOpt{
    from{
        transform: translateY(-100%);
        -webkit-transform: translateY(-100%);
    }
    to{
        transform: translateY(0);
        -webkit-transform: translateY(0);
    }
}

@-webkit-keyframes showAllOpt{
    from{
        transform: translateY(-100%);
        -webkit-transform: translateY(-100%);
    }
    to{
        transform: translateY(0);
        -webkit-transform: translateY(0);
    }
}

